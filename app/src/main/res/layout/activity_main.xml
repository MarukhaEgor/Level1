<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marukhaegor.level1.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_view_top_part_height"
        android:background="@color/main_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            style="@style/profile_avatar"
            android:layout_width="229dp"
            android:layout_height="158dp"
            android:src="@drawable/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            style="@style/settings_label_style"
            android:layout_marginStart="@dimen/settings_label_paddings"
            android:layout_marginTop="@dimen/settings_label_paddings"
            android:text="@string/profile_view_settings"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            style="@style/profile_name_Style"
            android:text="@string/profile_view_name"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView3"
            style="@style/profile_datastyle"
            android:text="@string/profile_view_profession"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            style="@style/profile_datastyle"
            android:text="@string/profile_view_adress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_profile_btn"
        android:text="@string/profile_view_edit_btn"
        app:layout_constraintBottom_toTopOf="@id/view_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/profile_btn_edit" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_contacts"
        android:text="@string/profile_view_contacts_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/profile_btn_view" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:src="@drawable/fb_img_btn"
        android:layout_marginStart="@dimen/profile_view_soc_btn_mStart"
        android:layout_marginTop="@dimen/profile_view_soc_btn_mTop"
        app:backgroundTint="@color/main_orange"
        app:borderWidth="@dimen/border_with"
        app:elevation="@dimen/btn_elevation"
        app:fabCustomSize="@dimen/rnd_social_btn_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:tint="@color/main_orange"
        style="@style/profile_soc_btn" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        app:fabCustomSize="@dimen/rnd_social_btn_size"
        android:src="@drawable/linkin_btn_img"
        app:backgroundTint="@color/main_orange"
        app:borderWidth="@dimen/border_with"
        app:elevation="@dimen/btn_elevation"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton3"
        app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton"
        app:tint="@color/main_orange"
        style="@style/profile_soc_btn" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_marginEnd="@dimen/profile_view_soc_btn_mEnd"
        android:backgroundTint="@color/white"
        android:src="@drawable/vk_img_btn"
        app:backgroundTint="@color/main_orange"
        app:borderWidth="@dimen/border_with"
        app:elevation="@dimen/btn_elevation"
        app:fabCustomSize="@dimen/rnd_social_btn_size"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton2"
        app:tint="@color/main_orange"
        style="@style/profile_soc_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>