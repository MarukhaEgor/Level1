<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settings_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="profile_name_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontProviderQuery">600</item>
    </style>

    <style name="profile_datastyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_text_color</item>
    </style>

    <style name="profile_btn_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_btn_height</item>
        <item name="android:layout_marginStart">@dimen/main_btns_paddings_16</item>
        <item name="android:layout_marginEnd">@dimen/main_btns_paddings_16</item>
        <item name="android:layout_marginBottom">@dimen/main_btns_paddings_16</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="profile_btn_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_marginStart">@dimen/main_btns_paddings_16</item>
        <item name="android:layout_marginEnd">@dimen/main_btns_paddings_16</item>
        <item name="android:layout_marginBottom">@dimen/main_btns_paddings_16</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/main_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="profile_soc_btn">
        <item name="android:layout_width">@dimen/rnd_social_btn_size</item>
        <item name="android:layout_height">@dimen/rnd_social_btn_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="profile_avatar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">113dp</item>
        <item name="android:layout_marginTop">@dimen/avatar_profile_padding</item>
    </style>

    <style name="editText_register" parent="TextAppearance.AppCompat">
        <item name="hintTextColor">@color/grey_text_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeColor">@color/grey_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColorHint">@color/grey_text_color</item>
        <item name="android:paddingStart">-16dp</item>
    </style>

    <style name="signUp_lets_get_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">"@font/open_sans_light"</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>