<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marukhaegor.level1.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_view_top_part_height"
        android:background="@color/main_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/avatar_profile_padding"
            android:src="@drawable/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_label_paddings"
            android:layout_marginTop="@dimen/settings_label_paddings"
            android:fontFamily="@font/open_sans_light"
            android:includeFontPadding="false"
            android:text="@string/profile_view_settings"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_view_name"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_view_profession"
            android:textColor="@color/grey_text_color"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_view_adress"
            android:textColor="@color/grey_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_profile_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_btn_height"
        android:layout_marginStart="@dimen/main_btns_paddings_16"
        android:layout_marginEnd="@dimen/main_btns_paddings_16"
        android:layout_marginBottom="@dimen/main_btns_paddings_16"
        android:background="@drawable/round_button"
        android:text="@string/profile_view_edit_btn"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/view_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_contacts"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/main_btns_paddings_16"
        android:layout_marginEnd="@dimen/main_btns_paddings_16"
        android:layout_marginBottom="@dimen/main_btns_paddings_16"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/main_orange"
        android:text="@string/profile_view_contacts_btn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="@dimen/rnd_social_btn_size"
        android:layout_height="@dimen/rnd_social_btn_size"
        android:layout_marginStart="48dp"
        android:layout_marginTop="62dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:src="@drawable/fb_img_btn"
        app:backgroundTint="@color/main_orange"
        app:borderWidth="@dimen/border_with"
        app:elevation="@dimen/btn_elevation"
        app:fabCustomSize="@dimen/rnd_social_btn_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:tint="@color/main_orange" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="@dimen/rnd_social_btn_size"
        android:layout_height="@dimen/rnd_social_btn_size"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:src="@drawable/linkin_btn_img"
        app:backgroundTint="@color/main_orange"
        app:borderWidth="@dimen/border_with"
        app:elevation="@dimen/btn_elevation"
        app:fabCustomSize="@dimen/rnd_social_btn_size"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButton3"
        app:layout_constraintStart_toEndOf="@+id/floatingActionButton"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton"
        app:tint="@color/main_orange" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:src="@drawable/vk_img_btn"
        app:backgroundTint="@color/main_orange"
        app:borderWidth="@dimen/border_with"
        app:elevation="@dimen/btn_elevation"
        app:fabCustomSize="@dimen/rnd_social_btn_size"
        app:layout_constraintBottom_toBottomOf="@+id/floatingActionButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton2"
        app:tint="@color/main_orange" />

</androidx.constraintlayout.widget.ConstraintLayout>